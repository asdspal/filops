{
  "name": "@filops/events",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "topics:create": "tsx scripts/create-topics.ts",
    "topics:list": "tsx -e \"import {getKafkaClient,TopicManager} from './src'; const k=getKafkaClient({brokers:['localhost:9092'],clientId:'list'}); new TopicManager(k).listTopics().then(t=>{console.log(t.filter(x=>x.startsWith('filops.')).join('\\n'));process.exit(0)})\""
  },
  "dependencies": {
    "@filops/common": "workspace:*",
    "kafkajs": "^2.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
